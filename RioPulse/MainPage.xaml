<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RioPulse.MainPage"
             Title="RioPulse">
    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="FillAndExpand">
                
            <Label Text="Search for a character" Style="{StaticResource Headline}" />

            <Entry x:Name="RegionEntry" Placeholder="Region" />
            <Entry x:Name="RealmEntry" Placeholder="Realm" />
            <Entry x:Name="CharacterNameEntry" Placeholder="Character Name" />
            
            <Button x:Name="SearchButton" Text="Search" Clicked="SearchButton_Clicked" />

            <Label x:Name="CharacterNameLabel" Style="{StaticResource Headline}" IsVisible="False" />
            <Label x:Name="CharacterRealmLabel" IsVisible="False" />
            <Label x:Name="CharacterRegionLabel" IsVisible="False" />
            <Label x:Name="CharacterScoreLabel" IsVisible="False" />

            <Label Text="Character History" Style="{StaticResource SubHeadline}" IsVisible="False"/>
            <CollectionView x:Name="CharacterHistoryCollectionView" IsVisible="False">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Label Text="{Binding Timestamp}" Grid.Column="0"/>
                            <Label Text="{Binding Character.MythicPlusScores.All}" Grid.Column="1"/>
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
